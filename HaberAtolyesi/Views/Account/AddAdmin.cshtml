@model HaberAtolyesi.Models.Register
@{
    ViewBag.Title = "AddAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("AddAdmin", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <div class="section-title mb-0">
            <h4 class="m-0 text-uppercase font-weight-bold">Admin Ekle</h4>
        </div>
        <div class="alert alert-info">Şifreniz minimum 8 karakterli olmalı ve içinde büyük, küçük harf ve sayı içermelidir. Örnek Şifre: "ASDasd123"</div>
        <div class="bg-white border border-top-0 p-4">
            <form>
                @if (ViewData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
                }
                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "form-group" })

                    <div class="col-md-10">

                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "form-group" })

                    <div class="col-md-10">

                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.RePassword, htmlAttributes: new { @class = "form-group" })

                    <div class="col-md-10">

                        @Html.EditorFor(model => model.RePassword, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.RePassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group mb-0">
                    <input type="submit" value="Admin Ekle"
                           class="btn btn-primary font-weight-semi-bold py-2 px-3">
                </div>

            </form>
        </div>
    </div>
}
