@model IEnumerable<HaberAtolyesi.Identity.ApplicationUser>
@{
    ViewBag.Title = "ListAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">


            <div class="row">
                <!-- Left col -->
                <section class="col-lg-7 connectedSortable">


                    <table class="table" style="width:65rem; margin:auto">
                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>




                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            if (item.Email != "batuhanaral3@gmail.com")
                            {
                                <tr>

                                    <td>
                                        @item.Name
                                    </td>

                                    <td>
                                        @item.Email
                                    </td>


                                    <td>@Html.ActionLink("Sil", "DeleteAdmin", "Account", new { id = item.Id }, new { @class = "btn btn-danger" })</td>


                                </tr>
                            }

                        }

                    </table>
                </section>
            </div>
            <!-- /.row (main row) -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>