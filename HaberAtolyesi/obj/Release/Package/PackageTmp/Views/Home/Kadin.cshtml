@model IEnumerable<HaberAtolyesi.Models.Haber>
@{
    ViewBag.Title = "Kadın";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<!-- News With Sidebar Start -->
<br />
<br />
<div class="container-fluid">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-12">
                        <div class="section-title">
                            <h4 class="m-0 text-uppercase font-weight-bold"> Son Haberler</h4>
                            <a class="text-secondary font-weight-medium text-decoration-none" href="@Url.Action("All", "Home")">Tümünü Görüntüle</a>
                        </div>
                    </div>
                    @{
                        int sayac = 0;
                    }
                    @foreach (var item in Model)
                    {

                        sayac += 1;
                        if (sayac < 50)
                        {
                            <div class="col-lg-6">
                                <div class="position-relative mb-3">
                                    <a href="@Url.Action("Detay", "Home", new { id = item.Id })">
                                        @if (item.Fotograf != null)
                                        {
                                            <img class="img-fluid w-100" src="~/Content/img/@item.Fotograf" style="object-fit: cover;">
                                        }

                                    </a>
                                    <div class="bg-white border border-top-0 p-4">
                                        <div class="mb-2">

                                            <p class="text-body" href=""><small>  @item.Create_Time.ToString("dd MMM yyyy")</small></p>
                                        </div>
                                        <a class="h6 d-block mb-3 text-secondary text-uppercase font-weight-bold" href="@Url.Action("Detay", "Home", new { id = item.Id })">  @item.Baslik</a>
                                        <p class="m-0">
                                            @item.Ozet
                                        </p>
                                    </div>

                                </div>
                            </div>
                        }

                    }



                </div>
            </div>

            @Html.Partial("_PartialSocialMedia");

        </div>
    </div>
</div>