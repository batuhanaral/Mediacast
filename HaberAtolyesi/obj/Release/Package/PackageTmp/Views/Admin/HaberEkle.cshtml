@model HaberAtolyesi.Models.Haber

@{
    ViewBag.Title = "Haber Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}






@using (Html.BeginForm("HaberEkle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <div class="section-title mb-0">
            <h4 class="m-0 text-uppercase font-weight-bold">Haber Ekle</h4>

        </div>
        @if (!string.IsNullOrEmpty(TempData["SuccessMessageH"] as string))
        {
            <div class="alert alert-success">@TempData["SuccessMessageH"]</div>
        }
        <div class="bg-white border border-top-0 p-4">
            <form>
                <div class="alert alert-secondary">Fotoğraf Yüklemeyi Unutmayın</div>
                <div class="form-group">
                    <input class="control-label " type="file" name="Photo" value="Fotoğraf yükleme" />
                </div>
                <div class="form-floating">
                    <select class="form-select" id="floatingSelect" aria-label="Floating label select example" name="kategori">

                        <option value="Gundem">Gündem</option>
                        <option value="Kent">Kent Ve Çevre</option>
                        <option value="Kadın">Kadın-LGBTİ+</option>
                        <option value="Sanat">Kültür-Sanat</option>
                        <option value="Saglık">Sağlık</option>
                        <option value="Spor">Spor</option>
                    </select>
                    <label for="floatingSelect">Kategori Seçiniz</label>
                </div>
                <br />
                <div class="form-group">
                    @Html.LabelFor(model => model.Baslik, htmlAttributes: new { @class = "form-group" })

                    <div class="col-md-10">

                        @Html.EditorFor(model => model.Baslik, new { htmlAttributes = new { @class = "form-control", placeholder = "Başlık..." } })
                        @Html.ValidationMessageFor(model => model.Baslik, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Ozet, htmlAttributes: new { @class = "form-group" })

                    <div class="col-md-10">

                        @Html.EditorFor(model => model.Ozet, new { htmlAttributes = new { @class = "form-control", placeholder = "Ozet..." } })
                        @Html.ValidationMessageFor(model => model.Ozet, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-10">
                    <div class="card card-outline card-info">
                        <div class="alert alert-warning">Editörden Fotoğraf video vb. yüklemeler yapılmaz. Sadece metin amaçı kullanınız!!</div>
                        <!-- /.card-header -->
                        <div class="card-body pad">
                            <div class="mb-3">
                                <textarea name="haber" class="textarea" placeholder="Place some text here"
                                          style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                            </div>

                        </div>
                    </div>
                </div>


                <!-- /.col-->
                @*<div class="form-group">
                        <label for="message">Haber</label>
                        <textarea name="haber" id="message" cols="30" rows="5" class="form-control"></textarea>
                    </div>*@


                <div class="form-group mb-0">
                    <input type="submit" value="Yükle"
                           class="btn btn-primary font-weight-semi-bold py-2 px-3">
                </div>
            </form>
        </div>
    </div>
}