@model HaberAtolyesi.Models.BolumViewModel

@{
    ViewBag.Title = "Bolum Ekle Spotify";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}





    @using (Html.BeginForm("BolumEkleS", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <div class="section-title mb-0">
                <h4 class="m-0 text-uppercase font-weight-bold">Podcast Ekle</h4>
            </div>
            <div class="bg-white border border-top-0 p-4">
                <form>
                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
                    }
                    <div class="form-group">
                        @Html.LabelFor(model => model.Baslik, htmlAttributes: new { @class = "form-group" })

                        <div class="col-md-10">

                            @Html.EditorFor(model => model.Baslik, new { htmlAttributes = new { @class = "form-control", placeholder = "Başlık..." } })
                            @Html.ValidationMessageFor(model => model.Baslik, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Link, htmlAttributes: new { @class = "form-group" })

                        <div class="col-md-10">

                            @Html.EditorFor(model => model.Link, new { htmlAttributes = new { @class = "form-control", placeholder = "Bölüm Linki..." } })
                            @Html.ValidationMessageFor(model => model.Link, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group mb-0">
                        <input type="submit" value="Podcast Ekle"
                               class="btn btn-primary font-weight-semi-bold py-2 px-3">
                    </div>

                </form>
            </div>
        </div>
    }


